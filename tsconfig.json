{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ES2020", "WebWorker"],
    "experimentalDecorators": true
  },
  "include": ["core/**/*", "protocol/**/*", "services/**/*"],
  "exclude": ["node_modules", "dist"]
} 